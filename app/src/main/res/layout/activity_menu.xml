<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/main_background"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:srcCompat="@drawable/bg"
      android:scaleType="centerCrop"/>

  <com.google.android.material.textview.MaterialTextView
      android:id="@+id/menu_lbl"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:text="Taylor VS Kanye"
      android:textColor="@color/white"
      app:fontFamily="@font/baloo_tamma"
      android:textSize="45sp"/>

  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/menu_mic"
      android:layout_width="@dimen/menu_mic_height_width"
      android:layout_height="@dimen/menu_mic_height_width"
      app:srcCompat="@drawable/microphone_svgrepo_com"
      android:layout_below="@id/menu_lbl"
      android:layout_centerHorizontal="true"/>
<LinearLayout
  android:layout_width="match_parent"
  android:layout_height="100dp"
  android:orientation="vertical"
    android:layout_below="@id/menu_mic">

</LinearLayout>



</RelativeLayout>